	<script>
		$('#reportDesigner').hide();

		function getDDLUsers() {
			const firstSelect = $('#UsersPermissionEdit');
			const secondSelect = $('#UsersAccess');
			const preSelectedUsersPermissionEditValues = @Html.Raw(Json.Serialize(rptCustomReportAddDto.UsersPermissionEdit));
			const preSelectedUsersAccessValues = @Html.Raw(Json.Serialize(rptCustomReportAddDto.UsersAccess));

			const url = `/CustomDevReport/GetUsersDdl`;
			$.ajax({
				url,
				type: 'GET',
				dataType: 'json',
				success: function (data) {
					data.forEach(({ value, text }) => {
						const option = $('<option>').val(value).text(text);
						firstSelect.append(option);
						const option2 = $('<option>').val(value).text(text);
						secondSelect.append(option2);

						if (preSelectedUsersPermissionEditValues.includes(value)) {
							option.prop('selected', true);
						}

						if (preSelectedUsersAccessValues.includes(value)) {
							option2.prop('selected', true);
						}
					});
				},
				error: function (xhr, status, error) {
					console.error('Error:', error);
				}
			});
		}

		function getDDLGroups() {
			const firstSelect = $('#GoupsPermissionEdit');
			const secondSelect = $('#GoupsAccess');

			const preSelectedGoupsPermissionEditValues = @Html.Raw(Json.Serialize(rptCustomReportAddDto.GoupsPermissionEdit));
			const preSelectedGoupsAccessValues = @Html.Raw(Json.Serialize(rptCustomReportAddDto.GoupsAccess));

			const url = `/CustomDevReport/GetGroupsDdl`;
			$.ajax({
				url,
				type: 'GET',
				dataType: 'json',
				success: function (data) {
					data.forEach(({ value, text }) => {
						const option = $('<option>').val(value).text(text);
						firstSelect.append(option);
						const option2 = $('<option>').val(value).text(text);
						secondSelect.append(option2);

						if (preSelectedGoupsPermissionEditValues.includes(value)) {
							option.prop('selected', true);
						}

						if (preSelectedGoupsAccessValues.includes(value)) {
							option2.prop('selected', true);
						}
					});
				},
				error: function (xhr, status, error) {
					console.error('Error:', error);
				}
			});
		}

		// programmin for show designer and save new report
		$(document).ready(function () {
			try
			{
				$('#txtReportName').val('@(Html.Raw(rptCustomReportAddDto.Name))');
				$('#txtReportName2').val('@(Html.Raw(rptCustomReportAddDto.Name2))');
				$('#DDltype').val('@(Html.Raw(rptCustomReportAddDto.DDltype))');
				$('#IsDefault').prop('checked', @(rptCustomReportAddDto.IsDefault ? "true" : "false"));
			}
			catch(e) {
			}

			$('#btnEdit').click(function (event) {
				BtnEditClick();
			});

			$('.dx-overlay-content').on("click", '[title="حفظ  as..."]', function (event) {
				$('#exampleModalCenter').modal('show');
				$('#btnSave').off('click').on('click', function (event) {
					var tempForm = {
						Name: $('#txtReportName').val() || null,
						Name2: $('#txtReportName2').val() || null,
						IsDefault: $('#IsDefault').is(':checked'),
						UsersPermissionEdit: $('#UsersPermissionEdit').val() || null,
						GoupsPermissionEdit: $('#GoupsPermissionEdit').val() || null,
						UsersAccess: $('#UsersAccess').val() || null,
						GoupsAccess: $('#GoupsAccess').val() || null,
						DDltype: $('#DDltype').val() ? parseInt($('#DDltype').val()) : null
					};
					pop.onSaved = function (onSaved){
						if (onSaved.url.includes("succefull")){
							alert("succefull save");

						}else{
							alert("failed save");
						}
						$('#exampleModalCenter').modal('hide');
					};

					pop.onSaving = function (onSaving) {
					};

					pop.save(JSON.stringify(tempForm));
				});
			});
		});

		function BtnEditClick() {
			// hide the edit button
			$('#btnEdit').hide();

			// fill DDL
			getDDLUsers();
			getDDLGroups()

			$('#documentViewer').hide();
			$('#reportDesigner').show();

			$('.dxrd-navigation-panel-wrapper').hide();
		};
	</script>
