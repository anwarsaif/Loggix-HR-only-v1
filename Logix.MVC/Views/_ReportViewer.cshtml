	<script type="text/javascript">
		function CustomizeLocalization(s, e) {
			var currentCulture = $('#language').val();
			if (currentCulture == 1) {
				e.LoadMessages($.get("/devexpress/custom/Resources/dx-reporting.ar.json"));
				e.LoadMessages($.get("/devexpress/custom/Resources/dx-analytics-core.ar.json"));
			}
			var supportedKeys = ["en"];
			var availableCultures = supportedKeys.reduce(function (result, item) {
				result[item] = DevExpress.Reporting.Metadata.availableCultures()[item] || item;
				return result;
			}, {})
			e.SetAvailableCultures(availableCultures);
		}

		function reportDesigner_CustomizeMenuActions(s, e) {
			e.Actions.forEach(function (action) {
				if (action.id == "dxrd-save" || action.id == "dxrd-open-report" || action.id == "dxrd-run-wizard" || action.id == "dxrd-newreport-via-wizard" || action.id == "dxrd-newreport") {
					action.visible = false;  // Hide the action
				}
			});
		}
		let pop;
		function customizeSaveAsDialog(s, e) {
			pop = e.Popup;
			e.Customize("custom-save-as-dialog", {});
		}
	</script>

