@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dark="false">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Error</title>

    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh; /* Full height of the viewport */
            margin: 0; /* Remove default margin */
        }

        h1 {
            color: red;
        }
    </style>
</head>
<body>
    <h1>Error</h1>
    <h3>An exception occurred while processing your request.</h3>
    <p>
        <strong>Exception: </strong><span>@ViewData["RptException"]</span>
    </p>
</body>

</html>